<!-- Leaflet JavaScript -->
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

<script>
    // ---------- INIT MAP ----------
    // Default coordinates (center of the world)
    let defaultLat = 39.8283;
    let defaultLng = -98.5795;  // center of USA
    let map = L.map('map').setView([defaultLat, defaultLng], 4);

    // Use OpenStreetMap tiles (free, no API key)
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
    }).addTo(map);

    // Custom marker icon (optional, you can use default)
    let marker = null;

    // Helper: hash a string to a number (simple djb2)
    function hashString(str) {
        let hash = 5381;
        for (let i = 0; i < str.length; i++) {
            hash = (hash * 33) ^ str.charCodeAt(i);
        }
        return hash >>> 0; // unsigned
    }

    // Generate latitude / longitude from a tracking code
    // (deterministic but looks random per code)
    function getCoordsFromCode(code) {
        if (!code) code = 'DEFAULT';
        const hash = hashString(code);
        // Latitude between -60 and +70 (avoid poles, keep visible)
        const lat = (hash % 130) - 60;  // range -60 .. 69
        // Longitude between -170 and 180
        const lng = (hash % 350) - 170; // range -170 .. 179
        return { lat, lng };
    }

    // Update map marker and info panel based on tracking code
    function updateTracking(code) {
        if (!code || code.trim() === '') {
            code = 'EMPTY';
        }
        const { lat, lng } = getCoordsFromCode(code);
        
        // Remove previous marker if exists
        if (marker) {
            map.removeLayer(marker);
        }

        // Create new marker with popup
        marker = L.marker([lat, lng]).addTo(map);
        marker.bindPopup(`
            <b>Package: ${code}</b><br>
            Last ping: ${new Date().toLocaleTimeString()}<br>
            Location: ${lat.toFixed(4)}¬∞, ${lng.toFixed(4)}¬∞
        `).openPopup();

        // Center map on the new location (with zoom level 5)
        map.setView([lat, lng], 5);

        // Update info panel
        document.getElementById('displayCode').innerText = code;
        document.getElementById('lastUpdate').innerHTML = `üïí ${new Date().toLocaleTimeString()}`;
    }

    // Handle form submission
    document.getElementById('trackingForm').addEventListener('submit', function(e) {
        e.preventDefault();  // don't reload page
        const input = document.getElementById('trackCode');
        let code = input.value.trim();
        if (code === '') {
            code = 'TRACK-UNKNOWN';
            input.value = code;
        }
        updateTracking(code);
    });

    // Initial load with default example (LH7845-USA)
    window.addEventListener('load', function() {
        updateTracking('LH7845-USA');
    });

    // Optional: randomize example for demo
    window.randomizeExample = function() {
        const prefixes = ['LH', 'US', 'FX', 'DHL', 'AMZ', 'FED', 'UPS', 'INT'];
        const randPrefix = prefixes[Math.floor(Math.random() * prefixes.length)];
        const randNum = Math.floor(Math.random() * 9000 + 1000);
        const randSuffix = String.fromCharCode(65 + Math.floor(Math.random() * 26)) +
                           String.fromCharCode(65 + Math.floor(Math.random() * 26));
        const example = `${randPrefix}${randNum}-${randSuffix}`;
        document.getElementById('trackCode').value = example;
        updateTracking(example);
    };
</script>

<!-- optional: add a little style for the popup -->
